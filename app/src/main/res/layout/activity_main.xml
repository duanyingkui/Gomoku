<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context="duanyingkui.gomoku.MainActivity">

    <LinearLayout android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/game_fight"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/game_fight"
            android:background="@drawable/back" />

        <Button
            android:id="@+id/game_help"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/game_help"
            android:background="@drawable/back" />

        <Button
            android:id="@+id/game_exit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/game_exit"
            android:background="@drawable/back" />

    </LinearLayout>

</RelativeLayout>
